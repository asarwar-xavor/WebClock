@{
    Layout = "";
    ViewData["Title"] = "Error";
}
<!DOCTYPE HTML>
<html>
<head>
    <title>..:::: Web Clock ::::..</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Web Clock" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta http-equiv="Content-Language" content="en-us" />
    <meta http-equiv="Content-type" content="text/html; charset=UTF-8" />
    <meta http-equiv="Cache-control" content="no-cache, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="Content-Script-Type" content="text/javascript" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <style>
        .logoutStyle {
            float: right;
            margin-right: 0.5%;
            cursor: pointer;
        }

        .headerDivStyle {
            text-align: center;
            padding-top: 10px;
            padding-bottom: 10px;
            background-color: #D93A2F;
            font-size: 20px;
            color: #fff;
        }

        .topMargin {
            padding-top: 5px;
        }

        .bodyDivStyle {
            text-align: center;
            padding-top: 10px;
        }

        .bodyStyle {
            font-family: 'Montserrat-Regular';
            background: #F3F3F4;
            overflow-x: hidden;
        }

        .informationBox {
            display: inline-block;
            border-radius: 20px;
            padding: 5px;
            color: rgb(59, 115, 185);
            opacity: 0.83;
            transition: opacity 0.6s;
            margin-bottom: 15px;
            border: 2px solid #D93A2F;
        }

        .centerAllign {
            text-align: center;
        }

        .rightAllign {
            float: right;
        }

        .leftAllign {
            text-align: left;
        }
    </style>
</head>



<body class="bodyStyle">
    <div>
        <div>
            <div>
                <div class="headerDivStyle">                   
                    <span>
                        Error
                    </span>
                </div>              
            </div>
            <br />
            <div class="centerAllign">
                <div class="row">
                    <div class="col-md-12">                       
                        <span style="color:red; font-weight:bold" >Web Clock for location @ViewBag.location has not been setup, please contact Administrator</span>
                    </div>
                </div>
            </div>
        </div>
        <br />

        <div class="centerAllign">
            <div class="row FCException informationBox leftAllign">
                <div class="col-md-12">
                    <div id="VerbiageDiv"></div>                    
                    <span class="rightAllign">@DateTime.Now</span>
                </div>
            </div>
        </div>
    </div>
    <script>      
        var xmlHttp = new XMLHttpRequest();
        xmlHttp.onreadystatechange = function () {
            if (xmlHttp.status == 200) {
                document.getElementById("VerbiageDiv").innerHTML = xmlHttp.responseText;
            }
        }
        xmlHttp.open("GET", "/WebClockApi/GetConfigurationProperties?key=WebClockContactMessage", true); // true for asynchronous 
        xmlHttp.send();       
    </script>
</body>
</html>